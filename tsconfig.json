{
	"ts-node": {
  },
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "es6",
    "allowJs": true,
    "moduleResolution": "node",
    "strictNullChecks": false,
    "experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"baseUrl": ".",
		"paths": {
			"*": ["./src/*"]
		},
		"esModuleInterop" : true,
		"allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/**/*"
  ],
  "types": ["node"]
}
